<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.example.ademdlaslan.otomasyon.MainActivity">

    <Button
        android:id="@+id/teknikservis"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="85dp"
        android:onClick="tks"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="Teknik Servis"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/yedekparca"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_alignLeft="@+id/teknikservis"
        android:layout_alignStart="@+id/teknikservis"
        android:layout_below="@+id/teknikservis"
        android:layout_marginTop="118dp"
        android:onClick="ypc"
        android:text="Yedek Parça" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:textStyle="italic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Adem Dölaslan" />

    <Button
        android:id="@+id/btnweb"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:textColor="#ffffff"
        android:onClick="web"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Web Sayfasını Ziyaret Edin" />
</RelativeLayout>
